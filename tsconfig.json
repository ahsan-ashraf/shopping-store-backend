{
  "compilerOptions": {
    "target": "ES2020", // or ES2019/ES2020+ is fine
    "module": "commonjs", // IMPORTANT: use commonjs to avoid ESM issues
    "rootDir": "./src", // where your TS code lives
    "outDir": "./dist", // compiled JS output
    "moduleResolution": "node",
    "esModuleInterop": true, // IMPORTANT: allows 'import express from "express"'
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
